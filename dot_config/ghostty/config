# ===========================================
# Ghostty Configuration
# ===========================================
# Docs: https://ghostty.org/docs/config/reference
# Reload: Cmd + Shift + , (macOS)

# --- Font ---
# Nerd Font (Brewfile: font-hack-nerd-font, font-fira-code-nerd-font)
font-family = "Hack Nerd Font"
font-size = 14
font-thicken = true

# Disable ligatures completely (avoid Japanese display issues)
font-feature = -calt
font-feature = -dlig

# --- Theme ---
# Auto switch based on OS appearance
# Available themes: ghostty +list-themes
theme = light:Catppuccin Latte,dark:Catppuccin Mocha

# --- Window ---
window-padding-x = 8
window-padding-y = 8
window-padding-balance = true
window-save-state = always
window-inherit-working-directory = true
window-inherit-font-size = true
confirm-close-surface = true

# --- Cursor ---
cursor-style = block
cursor-style-blink = false

# --- Mouse ---
mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

# --- Clipboard ---
copy-on-select = clipboard
clipboard-trim-trailing-spaces = true

# --- macOS Specific ---
macos-titlebar-style = tabs
macos-option-as-alt = true

# --- Quick Terminal ---
# Global hotkey: Ctrl+` to toggle (requires Accessibility permission)
keybind = global:ctrl+grave_accent=toggle_quick_terminal
quick-terminal-position = top
quick-terminal-animation-duration = 0.1

# --- Shell Integration ---
# Fish shell integration is automatic
shell-integration-features = cursor,sudo,title

# --- Claude Code Keybindings ---
# Use Shift+Enter and Cmd+Enter for newline in Claude Code
keybind = shift+enter=text:\n
keybind = super+enter=text:\n
